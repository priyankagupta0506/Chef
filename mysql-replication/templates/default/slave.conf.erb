[mysqld]

server-id = <%= @id %>
log-bin = <%= @log_bin %>
<% if @bind_address %>
  <% [@bind_address].flatten.each do |bind_address| %>
bind-address = <%= bind_address %>
  <% end %>
<% end %>
<% if @relay_log %>
  <% [@relay_log].flatten.each do |relay_log| %>
relay_log = <%= relay_log %>
  <% end %>
<% end %>
<% if @binlog_do_db %>
  <% [@binlog_do_db].flatten.each do |db| %>
binlog-do-db = <%= db %>
  <% end %>
<% end %>
<% if @database %>
  <% [@database].flatten.each do |db| %>
replicate-do-db = <%= db %>
  <% end %>
<% end %>
<% if @replicate_ignore_db %>
  <% [@replicate_ignore_db].flatten.each do |db| %>
replicate-ignore-db = <%= db %>
  <% end %>
<% end %>
<% if @options %>
  <% @options.each do |key,value| %>
<%= key %> = <%= value %>
  <% end %>
<% end %>

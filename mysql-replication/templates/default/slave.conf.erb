[mysqld]

server-id = <%= @id %>
<% if @log_bin %>
  <% [@log_bin].flatten.each do |log_bin| %>
log_bin = <%= log_bin %>
  <% end %>
<% end %>
<% if @relay_log %>
  <% [@relay_log].flatten.each do |relay_log| %>
relay_log = <%= relay_log %>
  <% end %>
<% end %>
<% if @database %>
  <% [@database].flatten.each do |db| %>
replicate-do-db = <%= db %>
  <% end %>
<% end %>
<% if @replicate_ignore_db %>
  <% [@replicate_ignore_db].flatten.each do |db| %>
replicate-ignore-db = <%= db %>
  <% end %>
<% end %>
<% if @options %>
  <% @options.each do |key,value| %>
<%= key %> = <%= value %>
  <% end %>
<% end %>
